# Database Configuration
# IMPORTANT: Change these values for your environment!
DB_HOST=localhost
DB_NAME=khoders_db
DB_USER=khoders_user
DB_PASS=YOUR_SECURE_PASSWORD_HERE

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Email Configuration (for contact forms)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=noreply@khodersworld.com
MAIL_FROM_NAME="KHODERS World"

# Security
# IMPORTANT: Generate strong random values!
# Use: openssl rand -hex 32 for JWT_SECRET
# Use: openssl rand -hex 16 for ENCRYPTION_KEY
JWT_SECRET=GENERATE_RANDOM_64_CHAR_STRING
ENCRYPTION_KEY=GENERATE_RANDOM_32_CHAR_KEY

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
