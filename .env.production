# KHODERS Website - Production Environment Configuration
# Copy this to .env and update with production values

# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_URL=https://khodersclub.com

# Database Configuration
DB_HOST=localhost
DB_NAME=khoders_db
DB_USER=khoders_user
DB_PASS=your_secure_production_password_here

# Security
SESSION_LIFETIME=7200
CSRF_TOKEN_EXPIRY=3600

# Email Configuration (if using SMTP)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@khodersclub.com
MAIL_PASSWORD=your_email_password_here
MAIL_FROM_ADDRESS=noreply@khodersclub.com
MAIL_FROM_NAME="KHODERS Coding Club"

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_DECAY_MINUTES=5

# Logging
LOG_LEVEL=error
LOG_PATH=/var/log/khoders

# CORS (for API endpoints)
CORS_ALLOWED_ORIGINS=https://khodersclub.com,https://www.khodersclub.com

# Admin Panel
ADMIN_SESSION_TIMEOUT=1800
ADMIN_MAX_LOGIN_ATTEMPTS=3
