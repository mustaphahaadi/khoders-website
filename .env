# Database Configuration
# IMPORTANT: Change these values in production!
DB_HOST=localhost
DB_NAME=khoders_db
DB_USER=root
DB_PASS=

# Admin Credentials
# IMPORTANT: Change these values immediately!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_PASSWORD

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Email Configuration (for contact forms)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=noreply@khodersworld.com
MAIL_FROM_NAME="KHODERS World"

# Security
# IMPORTANT: Generate strong random values for production!
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_32_CHAR_KEY

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
